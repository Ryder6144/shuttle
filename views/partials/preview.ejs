<div class="container py-5 text-white">
    <h1 class="text-center">HTML Previewer</h1>
    <div class="row my-5">
        <div class="col-md-6">
            <label for="html-input" class="form-label">Enter HTML code:</label>
            <textarea id="html-input" class="form-control" rows="10" cols="50"></textarea>
            <button id="preview-button" class="btn btn-primary mt-3">Preview</button>
        </div>
        <div class="col-md-6">
            <h2 class="mb-4">Preview:</h2>
            <div id="preview-container" class="border p-3"></div>
            <button id="stop-preview-button" class="btn btn-secondary mt-3 d-none">Stop Preview</button>
        </div>
    </div>
</div>
<script>
    const htmlInput = document.getElementById('html-input');
    const previewButton = document.getElementById('preview-button');
    const previewContainer = document.getElementById('preview-container');
    const stopPreviewButton = document.getElementById('stop-preview-button');

    previewButton.addEventListener('click', () => {
        htmlInput.classList.add('d-none');
        previewButton.classList.add('d-none');
        previewContainer.innerHTML = htmlInput.value;
        stopPreviewButton.classList.remove('d-none');
    });

    stopPreviewButton.addEventListener('click', () => {
        htmlInput.classList.remove('d-none');
        previewButton.classList.remove('d-none');
        previewContainer.innerHTML = '';
        stopPreviewButton.classList.add('d-none');
    });
</script>